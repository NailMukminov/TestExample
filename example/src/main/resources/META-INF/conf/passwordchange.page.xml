<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-4.0" name="Изменение пароля">
    <form>
        <fields>
            <input-text id="username" domain="string" label="Введите имя пользователя"/>
            <password id="password" domain="string" label="Введите пароль"/>
        </fields>
        <toolbar>
            <button label="Изменить пароль">
                <invoke object-id="user" operation-id="update" close-on-success="true"/>
            </button>
        </toolbar>
    </form>
</simple-page>
