<?xml version='1.0' encoding='UTF-8'?>
<query xmlns="http://n2oapp.net/framework/config/schema/query-4.0"
       object-id="dictionary">
    <list result-mapping="#this">
        <sql>
            SELECT :select
            FROM dictionary c
            WHERE :filters
            ORDER BY :sorting
            LIMIT :limit OFFSET :offset
        </sql>
    </list>
    <count count-mapping="[0]['cnt']">
        <sql>
            SELECT count(*) as cnt
            FROM dictionary c
            WHERE :filters
        </sql>
    </count>

    <fields>
        <field id="id" name="№">
            <select>id</select>
            <filters>
                <eq filter-id="id" mapping="['id']">id=:id</eq>
            </filters>
        </field>

        <field id="phrase" name="Фраза">
            <select>phrase</select>
            <sorting mapping="['phraseDir']">phrase :phraseDir</sorting>
            <filters>
                <like filter-id="phrase" mapping="['phrase']">phrase like '%'||phrase</like>
            </filters>
        </field>

        <field id="translation" domain="string" name="Перевод">
            <select>translation</select>
            <sorting mapping="['translationDir']">translation :translationDir</sorting>
        </field>
    </fields>
</query>
